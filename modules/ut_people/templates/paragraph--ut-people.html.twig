{#
/**
 * @file
 * Theme override to display a UMD Terp People Paragraph.
 */
#}

{%
  set classes = [
    'mb-5',
  ]
%}

{% block paragraph %}
	<div{{attributes.addClass(classes).setAttribute('id','umd_terp_paragraph--'~paragraph.id())}}>
		{% block content %}
			{% if content.field_ut_people_title|field_value %}
				<h2 class="h3">{{ content.field_ut_people_title|field_value }}</h2>
			{% endif %}
			<div class="row">
				{% for person in content.field_ut_people_people|field_value %}
					<div class="col-600-6 col-1000-4">
						{{ person }}
					</div>
				{% endfor %}
			</div>
		{% endblock %}
		{{ content|without('field_ut_people_people', 'field_ut_people_title') }}
	</div>
{% endblock paragraph %}
