<div class="editor-content">
  <figure aria-label="image with caption" role="group" class="align-left">
    <img src="{{ file_url(content.field_ut_image_with_text_image[0]['#media'].field_media_image.entity.uri.value | image_style('optimized')) }}" alt="{{ content.field_ut_image_with_text_image[0]['#media'].field_media_image.alt }}">
    {% if content.field_ut_image_with_text_caption|field_value %}
      <figcaption>{{ content.field_ut_image_with_text_caption|field_value }}</figcaption>
    {% endif %}
  </figure>
  {{ content.field_ut_image_with_text_text|field_value }}
</div>
