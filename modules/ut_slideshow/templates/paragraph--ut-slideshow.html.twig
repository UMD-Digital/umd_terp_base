{%
  set classes = [
    'slideshow-bg',
    paragraph.field_ut_slideshow_style.value ? paragraph.field_ut_slideshow_style.value|clean_class,
  ]
%}

<div class="{{ classes|join(' ') }}" id="umd_terp_paragraph--{{ paragraph.id() }}">
  <div class="slideshow-nav">
    <button class="slideshow-nav-control slideshow-control-prev" aria-label="Previous slide">
      <span class="icon icon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Previous slide</span>
    </button>
    <span><span class="slideshow-nav-current-index">1</span> of {{ ut_slideshow_length }}</span>
    <button class="slideshow-nav-control slideshow-control-next" aria-label="Next slide">
      <span class="icon icon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next slide</span>
    </button>
  </div>
  <div class="slideshow">
    {{ content.field_ut_slideshow_items|field_value }}
  </div>
</div>
