{#
/**
 * @file
 * Theme override to display a UMD Terp Carousel Item Paragraph.
 */
#}

<div class="carousel-item" id="umd_terp_paragraph--{{ paragraph.id() }}">
	<figure>
		<div class="carousel-image">
			<img src="{{ file_url(content.field_ut_carousel_item_image[0]['#media'].field_media_image.entity.uri.value | image_style('optimized')) }}" alt="{{ content.field_ut_carousel_item_image[0]['#media'].field_media_image.alt }}" tabindex="0">
		</div>
	</figure>
</div>
